{
  "compileOnSave": true,
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": true,
    "pretty": true,
    "strictPropertyInitialization": true,
    "sourceMap": false,
    "outDir": "./dist",
    "lib": ["esnext"],
    "types": ["miniprogram-api-typings"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
